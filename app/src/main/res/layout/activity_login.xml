<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_school_black_24dp"/>
    <EditText
        android:id="@+id/firstnameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Unesite ime"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"
        />
    <Button
        android:id="@+id/unesitepinBtn"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Unesite pin"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/pin1Et"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:inputType="number"/>
        <EditText
            android:id="@+id/pin2Et"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:inputType="number"/>
        <EditText
            android:id="@+id/pin3Et"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:inputType="number"/>
        <EditText
            android:id="@+id/pin4Et"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:inputType="number"/>

    </LinearLayout>
    <Button
        android:id="@+id/prijavaBtn"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Prijava"
        android:layout_marginTop="10dp"/>

</LinearLayout>